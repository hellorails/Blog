
<h1> Listing Users</h1>
<table>
	<tr>
		<td>Create New User ==> </td>
		<td><%= link_to 'New User', :action => 'new'%></td>
	</tr>
</table>
<table>
	<tr>
		<th>User Name</th>
		<th colspan =3>Functions</th>
	</tr>
	
	<% for user in @users %>
	<tr>
		<td><%= user.user_name%></td>
		<td><%= link_to 'Show', :action => 'show', :id => user.id %></td>
		<td><%= link_to 'Edit', :action => 'edit' , :id => user.id%></td>
		<td><%= link_to 'Delete', user , :action => 'destroy', :confirm => 'Are you sure?', :method => :delete, :id => user.id %></td>
	</tr>
	<% end %>
</table>